<div class="company">
	<div class="company-header">
		<a class="navbar-toggle sidebar-toggle" data-toggle="collapse" data-target="#sidebar">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</a>
		<div class="company-logo">
			<% if @company.closed? %>
			<div class="closed">
				Closed
			</div>
			<% end %>
			<img src="<%= @company.logo %>">
		</div>
		<div class="company-name">
			<% if !@company.site_url.blank? %>
			<h1><%= @company.name %></h1>
			<% else %>
			<h1><%= link_to @company.name, @company.site_url %></h1>
			<% end %>
		</div>
		<div class="company-info">
			<!-- Founded on <%= @company.founded_at %> -->
			<%= (@company.members.map{|m| link_to m.full_name, m}).join(" | ").html_safe %>
		</div>
		<div class="company-blurb">
			<p>
				<%= @company.blurb %>
			</p>
		</div>
	</div>
	<div class="company-posts">
		<% if @company.posts.any? %>
			<% @company.posts.each do |p| %>
				<%= render p %>
			<% end %>
		<% else %>
			<div class="no-posts">
				No recent posts for this company.
			</div>
		<% end %>
	</div>
</div>