<!-- 
	This should be a small card-like element that shows some basic info
	about each member.
-->
<div class="content-member col-sm-4">
	<div class="thumbnail">
		<div class="pull-left">
			<div class="member-photo">
				<% if member.alumni? %>
				<div class="alumni">
					Alumni
				</div>
				<% end %>
				<%= link_to member do %>
				<%= image_tag member.profile_image_url(800) %>
				<% end %>
			</div>
		</div>
		<div class="member-profile caption clearfix">
			<div class="profile-name">
				<h1><%= link_to member.full_name, member %></h1>
			</div>
			<div class="profile-info">
				<%= (member.companies.map{|c| link_to c.name, c}).join(" ").html_safe %>
			</div>
		</div>
	</div>
</div>